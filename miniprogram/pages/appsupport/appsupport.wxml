<!--pages/appsupport/appsupport.wxml-->
<view class="box">
<van-notice-bar
  color="#1989fa"
  background="#ecf9ff"
  left-icon="volume-o"
  text="感谢你的使用，我们一定会更加努力完善！"
/>
<view class="ima">
<image  src="https://img.tuguaishou.com/ips_templ_preview/w432_q100/97/5f/fb/lg_2904507_1586425822_5e8eefdeb3360.jpg?auth_key=2236953600-0-0-c4b86db2fa357532537341570c9bc1ef" class="image">
</image>
<text class="te">VOICE LIVE</text>
</view>
<van-rate
  class="vanstar"
  value="{{ value }}"
  size="{{ 25 }}"
  color="#9500FF"
  void-color="#eee"
  void-icon="star"
  bind:change="onChange"
  bindtap="star"
/>
<view class="pinj">
<van-divider
  contentPosition="center"
  customStyle="color: #1989fa; border-color: #1989fa; font-size: 18px;"
>
  评价
</van-divider>
