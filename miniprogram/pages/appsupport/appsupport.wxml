<textarea maxlength='150'
 placeholder-style="color:#5F5F5F;" 
 class="detail" 
 bindblur="bindContentBlur" 
 bindinput='limitWord' 
 value="{{content}}" 
   placeholder="请输入你的评价！" 
 name="content"></textarea>
<view class="clear">
       <text style="float: right">{{currentWord}}/{{maxWord}}</text>
</view>
</view>
<view class="btn">
  <van-button bindtap="queren" color="linear-gradient(to right, #4bb0ff, #6149f6)">确认</van-button>
</view>
<van-progress pivot-text="完善" color="#f2826a" percentage="25"  class="pro-1"/>
<van-progress pivot-text="努力" color="#ee0a24" percentage="50" class="pro-2"/>
<van-progress
class="pro-3"
  percentage="75"
  pivot-text="加油"
  pivot-color="#7232dd"
  color="linear-gradient(to right, #be99ff, #7232dd)"
/>
</view>